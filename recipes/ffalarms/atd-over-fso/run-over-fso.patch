+static void otimed_destroy(DBusGProxy *alarm_proxy, AtdAlarm *obj)
+{
+#ifdef DEBUG
+	printf("proxy for " OTIMED " destroyed\n");
+#endif
+	g_object_unref(obj->alarm_proxy);
