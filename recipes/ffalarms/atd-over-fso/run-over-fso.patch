+void display_free_g_error(GError **error)
+{
+	if ((*error)->domain == DBUS_GERROR &&
+	    (*error)->code == DBUS_GERROR_REMOTE_EXCEPTION)
+		g_printerr("Remote exception: %s: %s\n",
+			   dbus_g_error_get_name(*error),
+			   (*error)->message);
+	else
+		g_printerr("Error: %s\n", (*error)->message);
+	g_error_free(*error);
+	*error = NULL;
+}
