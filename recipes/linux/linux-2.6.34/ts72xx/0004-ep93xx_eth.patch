+
+	ep->link = 0;
+	ep->speed = 0;
+	ep->duplex = -1;
+	ep->phy_dev = phydev;
+
+	pr_info("attached PHY driver [%s] "
+			"(mii_bus:phy_addr=%s, irq=%d)\n",
+			phydev->drv->name, dev_name(&phydev->dev), phydev->irq);
+
+	return 0;
+}
