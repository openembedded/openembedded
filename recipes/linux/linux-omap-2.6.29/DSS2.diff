+	dsi_wait_sync(display);
+
+	display->state = OMAP_DSS_DISPLAY_DISABLED;
+
+	dsi_display_uninit_dispc(display);
+
+	dsi_display_uninit_dsi(display);
+
+	enable_clocks(0);
+	dsi_enable_pll_clock(0);
