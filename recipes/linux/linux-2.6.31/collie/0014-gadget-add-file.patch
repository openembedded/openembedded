+	register_proc_entry();
+
+#if defined(CONFIG_SA1100_COLLIE)
+	collie_usb_init();
+#endif	
+
+	/* setup dma channels and IRQ */
+	retval = sa1100_request_dma(DMA_Ser0UDCRd, "USB receive",
