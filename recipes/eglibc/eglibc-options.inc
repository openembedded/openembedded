def eglibc_cfg(feature, features, tokens, cnf ):
	if type(tokens) == type(""):
		tokens = [tokens]
	if type(features) == type([]) and feature in features:
		cnf.extend([token + ' = y' for token in tokens])
	else:
		cnf.extend([token + ' = n' for token in tokens])

