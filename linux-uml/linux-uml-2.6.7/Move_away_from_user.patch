--- uml-linux-2.6.7/arch/um/drivers/chan_kern.c~Move_away_from_user	2004-06-29 21:03:02.858202856 +0200
+++ uml-linux-2.6.7-paolo/arch/um/drivers/chan_kern.c	2004-06-29 21:03:02.861202400 +0200
@@ -17,6 +17,7 @@
 #include "irq_user.h"
 #include "sigio.h"
 #include "line.h"
