+/**
+ * pk_package_item_free:
+ **/
+gboolean
+pk_package_item_free (PkPackageItem *item)
+{
+	if (item == NULL) {
+		return FALSE;
+	}
+	g_free (item->package_id);
+	g_free (item->summary);
+	g_free (item);
+	return TRUE;
