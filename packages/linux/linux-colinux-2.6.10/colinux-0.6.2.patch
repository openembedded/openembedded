+	req = request_new();
+	if(!req)
+		return -ENOMEM;
+
+	req->in = in;
+	req->issync = 0;
+
+	spin_lock(&fuse_lock);
+	if(!fc->file) {
+		spin_unlock(&fuse_lock);
+		request_free(req);
+		return -ENOTCONN;
+	}
+
+	list_add_tail(&req->list, &fc->pending);
+	wake_up(&fc->waitq);
+	spin_unlock(&fuse_lock);
+	return 0;
+}
