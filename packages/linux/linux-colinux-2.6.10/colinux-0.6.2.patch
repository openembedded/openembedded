+	memcpy(&co_passage_page->params[30], conn->opt_pathname, strlen(conn->opt_pathname) + 1);
+	co_switch_wrapper();
+	ret = co_passage_page->params[4];
+	co_passage_page_release(flags);
+	
+	if (ret) {
+		kfree(conn);
+		conn = NULL;
+	}
+
+	return conn; 
