+			continue;
+		}
+		cobd = (struct cobd_device *)(req->rq_disk->private_data);
+		
+		ret = cobd_transfer(cobd, req->sector, req->current_nr_sectors,
+				    req->buffer, rq_data_dir(req));
+		end_request(req, ret);
+        }
