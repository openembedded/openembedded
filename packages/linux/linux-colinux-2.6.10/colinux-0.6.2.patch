+	struct fuse_conn *fc;
+	struct inode *root;
+#ifndef CONFIG_COOPERATIVE
+	struct fuse_mount_data *d = data;
+#else
+	struct cofuse_mount_data *co_d = data;
+	struct fuse_mount_data *d = co_d->fuse;
