+/*
+ * Read the GPIOs for POWER, RECORD and SYNC
+ */
+static int read_port_key_status_raw(void)
+{
+	int val=0;
+
+	/* Power key */
+	if ((GPLR0 & GPIO_bit(TOSA_GPIO_ON_KEY))==0)
+		val |= KEYMASK_ON;
+	/* Record key */
+	if ((GPLR0 & GPIO_bit(TOSA_GPIO_RECORD_BTN))==0)
+		val |= KEYMASK_REC;
+	/* Sync key */
+	if ((GPLR0 & GPIO_bit(TOSA_GPIO_SYNC))==0)
+		val |= KEYMASK_SYNC;
+	return val;
+}
