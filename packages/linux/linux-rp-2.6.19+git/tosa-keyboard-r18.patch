+#define TOSA_KEY_SYNC           KEY_F13
+
+#define GET_ROWS_STATUS(c)	((GPLR2 & TOSA_GPIO_ALL_SENSE_BIT) >> TOSA_GPIO_ALL_SENSE_RSHIFT)
+#define KB_DISCHARGE_DELAY	10
+#define KB_ACTIVATE_DELAY	10
