+        enable_irq(IRQ_CAMERA);
+
+        if(cam_ctx != NULL)
+        {  
+            ddbg_print("camera running, resumed");
+            camera_init(cam_ctx);
+            if(resume_dma == 1)
+            {
+                camera_start_video_capture(cam_ctx, 0);
+                resume_dma = 0;
+            }
+        }
+    }
