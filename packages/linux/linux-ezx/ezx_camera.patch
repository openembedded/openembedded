+	
+    for(addr = startRegAddr; addr <= endRegAddr; addr++)
+    {
+        unsigned long flags;
+        local_irq_save(flags);
+	   
+        mt9m111_read(addr, &value);
+	  
+        local_irq_restore(flags);
+
+        mt9m111_dbg_print("mt9m111 register: 0x%04x = %04x",addr,value);
+	   
+        if(buffer)
+        {
+            *buffer = value;
+            buffer++;
+        }
+    }
+}
