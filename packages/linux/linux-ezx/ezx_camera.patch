+	    dbg_print("Change block address failed. block = 0x%2x", blockaddr);
+	    return -1;
+	}
+        if((ret = e680_camera_write(&offset, 1)) < 0)
+        {
+            dbg_print("i2c write error code =%d", ret);
+            return -1;
