+    // write cicr1: preserve ppl value and data width value
+    dbg_print("0");
+    value = CICR1;
+    dbg_print("1");
+    value &= ( (CI_CICR1_PPL_SMASK << CI_CICR1_PPL_SHIFT) | ((CI_CICR1_DW_SMASK) << CI_CICR1_DW_SHIFT));
+    tbit = rgbt_conv = rgb_conv = rgb_f = ycbcr_f = rgb_bpp = raw_bpp = cspace = 0;
+    switch(input_format) 
