+#define wait_sreg_update()  { int   retry = adcm2700__TIMEOUT<<2;                   \
+			      dbg_print("wait for sensor update simple registers"); \
+                              adcm2700_write(SREG_CONTROL,   0x05);                 \
+                              while(--retry)                                        \
+                              {                                                     \
+                                u16 v = adcm2700_reg_read(SREG_CONTROL);            \
+                                mdelay(1);                                          \
+                                if(v == 0xFF)  break;                               \
+                                if(!(v & 0x04)) break;                              \
+                              }                                                     \
+                              dbg_print("retry = %d", retry);                       \
+                            }
