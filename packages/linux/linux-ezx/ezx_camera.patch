+  if(space == ADDRSPACE_CORE)
+  {
+    reg_value = mt9v111_read_core_reg(addr);
+  }
+  else if(space == ADDRSPACE_IFP)
+  {
+    reg_value = mt9v111_read_ifp_reg(addr);
+  }
+  else
+  {
+    return -EFAULT;
+  }
+  
+  if(copy_to_user(param, &reg_value, sizeof(int))) 
