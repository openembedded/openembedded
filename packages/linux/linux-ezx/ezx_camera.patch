+#define PXA_CAMERA_BUFFER_COPY_TO_USER(buf, p_page, size) \
+do { \
+	unsigned int len; \
+	unsigned int remain_size = size; \
+	while (remain_size > 0) { \
+		if(remain_size > PAGE_SIZE) \
+			len = PAGE_SIZE; \
+		else \
+			len = remain_size; \
+		if(copy_to_user(buf, page_address(*p_page), len)) \
+			return -EFAULT; \
+		remain_size -= len; \
+		buf += len; \
+		p_page++; \
+	} \
+} while (0);
