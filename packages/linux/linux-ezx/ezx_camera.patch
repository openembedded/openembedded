+        gaina /= 2;
+    }
+    if(gaina>31)
+    {
+        gain |= 0x10;
+        gaina /= 2;
+    }
+    if( gaina>16 )
+        gaina -= 16;
+    else
+        gaina = 0;
+    gain = gain | gaina;
