+    case CI_RAW8:
+        cspace = 0;
+        raw_bpp = 0;
+        break;
+    case CI_RAW9:
+        cspace = 0;
+        raw_bpp = 1;
+        break;
+    case CI_RAW10:
+        cspace = 0;
+        raw_bpp = 2;
+        break;
+    case CI_YCBCR422:
