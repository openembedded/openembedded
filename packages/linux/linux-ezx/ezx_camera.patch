+void ov9650_power_down(int powerDown)
+{
+	// OV9650 PWRDWN, 0 = NORMAL, 1=POWER DOWN
+	GPDR1 |= GPIO_bit(50);
+	//OV9650 reset CIF_RST, 0 = NORMAL, 1=RESET
+	GPDR0 |= GPIO_bit(19);
+	if (powerDown == 1) {
+		GPSR1 = GPIO_bit(50);
+	}
+	else {
+		GPCR1 = GPIO_bit(50);
+		GPSR0 = GPIO_bit(19);
+		mdelay(20);
+		GPCR0 = GPIO_bit(19);
+	}
+	mdelay(100);
+}
