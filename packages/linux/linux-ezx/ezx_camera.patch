+{
+    u16   newcfg;
+    u16   oldcfg;
+    adcm3800_read(SREG_OUTPUT_FORMAT, &oldcfg);
+      
+    newcfg = (oldcfg & 0xFFF0) | (format & 0x000F);
+    if(newcfg!=oldcfg)
+    {
+        adcm3800_write( SREG_OUTPUT_FORMAT, newcfg );
+    }
+
+    return 0;
+}
