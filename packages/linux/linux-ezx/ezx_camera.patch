+static int adcm3800_firmware_upgrade(void)
+{
+    u8  valueb;
+    u16 valuew;
+
+    //adcm3800_write(0x3040, 0x0100);
+
+    int to = 200;
+    while(to>0)
+    {
+        adcm3800_read(0x0004, &valuew);
+        if(valuew==0x0000)
+            break;
+        mdelay(5);
+        to -= 1;
+    }
+
+    dbg_print("start patch");
+    adcm3800Patch();
+    dbg_print("end patch");
+    adcm3800_read_byte(0x084b, &valueb);
+
+    return 0;
+}
