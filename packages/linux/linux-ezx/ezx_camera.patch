+  case V4l_STYLE_NEG_ART:
+       mt9m111_write(0x1E2,0x7003);
+       break;
+  default:
+       mt9m111_write(0x1E2,0x7000);
+       break;
+  }
+
+  return MICRON_ERR_NONE;
