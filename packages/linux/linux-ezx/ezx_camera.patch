+int ov9640_set_regs(u8 * regP)
+{
+	u32 curReg = 0;
+	int status = 0;
+
+	// The list is a register number followed by the value.
+	while (regP[curReg << 1] < OV9640_REGEND) {
+		status = prv_write_sensor_reg(regP[curReg << 1], &regP[(curReg << 1) + 1]);
+		if (curReg == 0)
+			ov9640_wait(1);
+
+		curReg++;
+	}
+	return status;
+}
