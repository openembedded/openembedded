+        adcm3800_write(SREG_ILLUM, old1|0x10);
+        adcm3800_write(EREG_AF_CTRL2, old|0x02);
+        // 833 = 100000/60/2 
+        adcm3800_write(EREG_AE_ETIME_DFLT, 833);  
