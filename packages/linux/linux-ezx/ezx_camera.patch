+			}
+		}
+
+		disable_irq(IRQ_CAMERA);
+		CKEN &= ~CKEN24_CAMERA;
+	}
+	else {
+		CKEN |= CKEN24_CAMERA;
+		enable_irq(IRQ_CAMERA);
+
