+static int adcm3800_writeb_regs (u16 regAddr, u8 *regData, u16 nRegs)
+{
+    int i, ret;
+    for(i = 0; i < nRegs; i++)
+    {
+        ret = adcm3800_write_byte(regAddr+i, regData[i]);
+        if(ret < 0)
+        {
+            dbg_print("adcm3800 write error %d:%04x!", i, regAddr+i*2);
+            return -1;
+        }
+    }
