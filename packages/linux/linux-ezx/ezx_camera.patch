+int ci_disable(int quick)
+{
+	volatile unsigned int value, mask;
+	int retry;
+
+	// write control bit in cicr0   
+	value = CICR0;
+	if (quick) {
+		value &= ~CI_CICR0_ENB;
+		mask = CI_CISR_CQD;
+	} else {
+		value |= CI_CICR0_DIS;
+		mask = CI_CISR_CDD;
+	}
+	CICR0 = value;
+
+	// wait shutdown complete
+	retry = 50;
+	while (retry-- > 0) {
+		value = CISR;
+		if (value & mask) {
+			CISR = mask;
+			return 0;
+		}
+		mdelay(10);
+	}
+
+	return -1;
+}
