+			dbg_print("camera running, resumed");
+			camera_init(cam_ctx);
+			//ov9640_restore_property(cam_ctx, 0);
+
+
+			if (resume_dma == 1) {
+				camera_start_video_capture(cam_ctx, 0);
+				resume_dma = 0;
+			}
+		}
+	}
