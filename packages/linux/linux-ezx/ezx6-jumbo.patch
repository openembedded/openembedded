+	if(frames == 1) //Wait 2 frames to begin capture photo
+	{
+   	  waitingFrame = 2;
+	} 
+	else
+	{ 
+	   waitingFrame = 1;
+	}
+	while(waitingFrame--)
+	{
+	    CISR|=(1<<3);
+	    while(!(CISR&(1<<3))); //Wait a EOF then begin start DMA
+	}
+	ci_reset_fifo();
+	start_dma_transfer(camera_context, block_id);
+	return status;
