+    pan_ver=(MT9V111_SENSOR_HEIGHT- size->height)>>1;
+    
+    mt9v111_write_ifp_reg(0xa5,0x8000|pan_hor);
+    mt9v111_write_ifp_reg(0xa8,0x8000|pan_ver);
+    mt9v111_write_ifp_reg(0xa6,0x8000|size->width);
