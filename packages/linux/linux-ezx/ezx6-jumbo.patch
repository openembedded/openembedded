+        ssp_pcap_gpioClkControl(SSP_PCAP_BIT_ONE);
+        loopValue = loopValue/2;
+        ssp_pcap_gpioClkControl(SSP_PCAP_BIT_ZERO);
+    }
+    /*   end the frame */
+    ssp_pcap_gpioFrmControl(SSP_PCAP_BIT_ZERO);
