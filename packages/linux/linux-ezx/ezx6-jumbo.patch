+int sram_access_obtain(unsigned long *pmem, unsigned long *psize) {
+
+	int flags;
+	
+	spin_lock_irqsave(&sram_spinlock, flags);
+	
+	if (sram_locked != 0) 	{
+		spin_unlock_irqrestore(&sram_spinlock, flags);
+		return -EAGAIN;
+	}
+
+	sram_locked = 1;
+
+	spin_unlock_irqrestore(&sram_spinlock, flags);
+	
+	*pmem = SRAM_MEM_VIRT;
+	*psize = SRAM_SIZE;
+	
+	return 0;
+}
