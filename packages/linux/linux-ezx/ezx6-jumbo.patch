+	}
+	
+	audioonflag &= ~type;
+	
+#ifdef EZX_OSS_DEBUG
+	printk(EZXOSS_DEBUG "E680 No. 0x%X device is still using the mixer hardware.\n", audioonflag);
+#endif
+
