+	shutdown_mixer(DSP_DEVICE);
+
+	/* disable PCAP stereo DAC */
+	SSP_PCAP_bit_clean(SSP_PCAP_ADJ_BIT_ST_DAC_ST_CLK_EN);
+        SSP_PCAP_bit_clean(SSP_PCAP_ADJ_BIT_ST_DAC_ST_DAC_EN);
