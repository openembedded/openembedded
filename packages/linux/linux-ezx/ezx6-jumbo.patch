+#define COPY_BUFFERS(pdes, p_page, size) \
+do { \
+	unsigned int len; \
+	unsigned int remain_size = size; \
+	while (remain_size > 0) { \
+		if (remain_size > PAGE_SIZE) \
+			len = PAGE_SIZE; \
+		else \
+			len = remain_size; \
+		if (memcpy(page_address(*pdes), page_address(*p_page), len)) \
+			return -EFAULT; \
+		remain_size -= len; \
+		pdes ++;\
+		p_page++; \
+	} \
+} while (0);
