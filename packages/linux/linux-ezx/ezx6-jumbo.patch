+		status = ov9650_set_regs(regsP);
+	}
+	else {
+		status = ov9650_switch_format(captureSizeFormat, colorFormat);
+	}
+no_set:
+	prev_colorFormat = colorFormat;
+	prev_size = captureSizeFormat;
+	return status;
