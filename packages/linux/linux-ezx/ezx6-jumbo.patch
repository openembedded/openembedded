+	DRCMR70 = ci_dma_cr | DRCMR_MAPVLD;
+
+
+	// set capture format
+	ret = camera_set_capture_format(cam_ctx);
+	if (ret)
+		goto camera_init_err;
+
+	// set frame rate
+	//camera_set_capture_frame_rate(cam_ctx);
+
+	return 0;
+
+      camera_init_err:
+	camera_deinit(cam_ctx);
+	return -1;
