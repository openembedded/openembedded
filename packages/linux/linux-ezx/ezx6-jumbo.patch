+	
+	// get dma end mask
+	end_des_virtual = (pxa_dma_desc *)cam_ctx->fifo0_descriptors_virtual + cam_ctx->fifo0_num_descriptors - 1;
+
+	if(end_des_virtual->dcmd & DCMD_ENDIRQEN)
+    {
+		ret |= CAMERA_INTMASK_END_OF_DMA;
+    }
+	return ret;   
