+
+	if (register_blkdev(ROFLASH_MAJOR, DEVICE_NAME)) {
+#ifdef ROFLASH_DEBUG_ERR
+		printk(KERN_ERR "roflash_init(): Could not get major %d", ROFLASH_MAJOR);
