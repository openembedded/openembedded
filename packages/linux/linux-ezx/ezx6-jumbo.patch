+			return 0;
+		}
+		else {
+			ov9640_auto_function_off();
+			cam_ctx->block_tail = cam_ctx->block_header = 0;
+			ov9640_prepare_capture(cam_ctx, ovSizeFormat, ovFormat);
+		}
