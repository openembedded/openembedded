+	int ret;
+    unsigned int flags;
+
+	/* copy user space data to kernel space. */
+	tmp = kmalloc(count,GFP_KERNEL);
+	if (tmp==NULL)
+		return -ENOMEM;
+    local_irq_save(flags);
+    enable_irq(IRQ_I2C);
+	ret = i2c_master_recv(fmradio_client,tmp,count);
+    local_irq_restore(flags);
+	if (ret >= 0)
+		copy_to_user(buf,tmp,count);
+	kfree(tmp);
+	return ret;
