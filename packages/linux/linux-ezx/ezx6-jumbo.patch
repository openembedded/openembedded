+static int kp_direct_scan(struct kp_event *kpe)
+{
+	kpe->flags 	|= KP_DIRECT;
+	kpe->direct 	= KPDK;
+	kpe->rotary	= KPREC;
+	return 0;
+}
+
+static int kp_matrix_scan(struct kp_event *kpe)
+{
+	KPC |= KPC_AS;
+	while (KPAS &KPAS_SO);
+
+	kpe->flags 	|= KP_MATRIX;
+	kpe->matrix[0] 	= KPAS;
+	kpe->matrix[1]  = KPASMKP0;
+	kpe->matrix[2]	= KPASMKP1;
+	kpe->matrix[3]	= KPASMKP2;
+	kpe->matrix[4]	= KPASMKP3;
+
+	KPC &= ~KPC_AS;
+
+	return 0;
+}
