+	prv_read_sensor_reg(OV9640_AECH, &aech);
+	prv_read_sensor_reg(OV9640_COM1, &aecl);
+	aecl &= 0x3;
+	prv_read_sensor_reg(OV9640_LAEC, &laec);
+
+	pov->gain = gain;
+	pov->blue_gain = blue;
+	pov->red_gain = red;
+	pov->exp_value = (aech << 2) | aecl;
+	pov->exp_time = laec;
+
