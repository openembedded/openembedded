+//////////////////////////////////////////////////////////////////////////////////////
+//adcm2700 functions
+//
+int camera_func_adcm2700_init(p_camera_context_t);
+int camera_func_adcm2700_deinit(p_camera_context_t);
+int camera_func_adcm2700_docommand(p_camera_context_t cam_ctx, unsigned int cmd, void *param);
