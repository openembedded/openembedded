+static struct file_operations sram_fops = {
+	llseek:		sram_lseek,
+	read:		sram_read,
+	write:		sram_write,
+	mmap:		sram_mmap,
+	open:		sram_open,
+	release:	sram_release,
+};
+
+static struct miscdevice sram_misc = {
+	minor : MISC_DYNAMIC_MINOR,
+	name  : "misc/sram",
+	fops  : &sram_fops,
+};
