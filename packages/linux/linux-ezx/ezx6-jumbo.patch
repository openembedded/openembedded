+static unsigned short
+get_from_keybuf(void)
+{
+    unsigned short event;
+    unsigned long flags;
+
+    spin_lock_irqsave(&keypad_lock, flags);
+    event = keybuf[keybuf_start];
+    KEYBUF_INC (keybuf_start);
+    spin_unlock_irqrestore(&keypad_lock, flags);
