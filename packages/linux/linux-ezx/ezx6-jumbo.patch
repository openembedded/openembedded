+int adcm3800_set_flicker(int flicker)
+{
+    adcm3800_context.flicker_freq = flicker;
+    u16 old;
+    u16 old1;
+    adcm3800_read(EREG_AF_CTRL2, &old);
+    adcm3800_read(SREG_ILLUM, &old1);
+    old1 &= ~(0x18);
