+{
+	pxa_dma_desc *cur_des_virtual, *cur_des_physical, *last_des_virtual = NULL;
+	int remain_size;
+	unsigned int i;
+
+	int target_page_num;
+
+	DPRINTK("ov9650_update_still_dma_chain\n");
