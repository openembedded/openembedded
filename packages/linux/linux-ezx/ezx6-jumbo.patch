+        120,
+        140,
+        160,
+        180
+    };
+    if(bright > 4|| bright < -4)
+    {
+        return -EFAULT;
+    }
+    mt9v111_write_ifp_reg(0x2e,(16<<8)|target[bright+4]);
+    return 0;
+}
