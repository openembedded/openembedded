+            udelay(10);
+
+            set_GPIO_IRQ_edge(GPIO_SNP_INT_IN,GPIO_FALLING_EDGE|GPIO_RISING_EDGE);
+
+#if 0
+            if(GPLR(GPIO_SNP_INT_IN) & GPIO_bit(GPIO_SNP_INT_IN))
+            {
+                EMU_DBG("emu_ioctl:87 is high\n");
+            }
+            else
+            {
+                EMU_DBG("emu_ioctl:87 is low\n");
+            }
