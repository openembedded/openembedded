+			rg = MIN(255, rg + 20);
+		else if (vav < 100)
+			rg = MIN(255, rg + 5);
+		else if (vav < 120)
+			rg = MIN(255, rg + 1);
+		else if (vav > 206)
+			rg = MAX(0, rg - 40);
+		else if (vav > 180)
+			rg = MAX(0, rg - 20);
+		else if (vav > 156)
+			rg = MAX(0, rg - 5);
+		else if (vav > 136)
+			rg = MAX(0, rg - 1);
+
+		if (uav < 50)
+			bg = MIN(255, bg + 40);
+		else if (uav < 80)
+			bg = MIN(255, bg + 20);
