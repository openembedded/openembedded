+void stop_dma_transfer(p_camera_context_t camera_context)
+{	
+    int ch0, ch1, ch2;
+
+    ch0 = camera_context->dma_channels[0];
+    ch1 = camera_context->dma_channels[1];
+    ch2 = camera_context->dma_channels[2];
+
+    DCSR(ch0) &= ~DCSR_RUN;
+    DCSR(ch1) &= ~DCSR_RUN;
+    DCSR(ch2) &= ~DCSR_RUN;
+	camera_context->dma_started = 0;
+
+    return;
