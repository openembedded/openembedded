+{
+	if ((*pmem != SRAM_MEM_VIRT) ||
+	    (*psize != SRAM_SIZE)){
+		return -EINVAL;
+	}
+	
+	*pmem = 0;
+	*psize = 0;
+
+	sram_locked = 0;
+	
+	return 0;
+}
