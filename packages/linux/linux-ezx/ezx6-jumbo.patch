+		if(ssp_pcap_bit_status == 0)	// keydown
+		{
+			answer_flag ++;
+                	if((!FULL(buttonevent))&&((answer_flag==1)||((answer_flag%NR_REPEAT)==0)))
+			{	
+				buttonevent.button_buffer[buttonevent.head] = ANSWER | KEYDOWN;
